<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">What's Your Burger?</h1>
  </div>
</div>

<section class="container" id="burger_boy">
  <div class="row mb-2">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="card" style="width: 18rem;">
        <img src="https://steam-training.com/wp-content/uploads/2019/06/4545604d27bba6eda4e0d6467c72eebb.jpg"
          class="align-self-center card-img-top" alt="Burger Boy">
      </div>
    </div>
  </div>
  <div class="col-2"></div>
  </div>
</section>

<section class="container">
  <div class="row text-center">
    <h2>What's the name of your burger?</h2>
  </div>
  <form action="api/burgers" method="POST">
    <div class="input-group mb-3">
      <input name="text" type="text" class="form-control" placeholder="Burger Text" aria-label="Enter Burger Fixings">
      <div class="input-group-append">
        <button class="btn btn-outline-primary" type="submit">Submit</button>
      </div>
    </div>
  </form>
  </div>
</section>

<section class="container">
  <div class="row">
    <div class="col-6">
      <h2>Order Up!</h2>
      <ul>
        {{#each burgers }}
        <li>
          {{#unless devoured}}
          <p>{{id}} {{text}} </p>
          {{/unless}}
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-6">
      <h2>Devoured</h2>
      <ul>
        {{#each burgers }}
        <li>
          {{#if devoured}}
          <p>{{id}} {{text}} </p>
          {{/if}}
        </li>
        {{/each}}
      </ul>
    </div>
  </div>


</section>


